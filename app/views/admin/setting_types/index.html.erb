<header class="page-header">
  <h1>
    <%= fa('gears') %> Setting Types
    <small>
      <%= link_to(fa('plus') + ' New Setting Type', new_admin_setting_type_path) %>
    </small>
  </h1>
</header>


<% if @setting_types.present? %>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th><th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @setting_types.each do |setting_type| %>
        <tr>
          <td><%= setting_type.id %></td>
          <td><%= link_to(setting_type.name, admin_setting_type_path(setting_type)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <p class="text-danger">Why for are there no more setting types no more?</p>

<% end %>


<header class="page-header">
  <h1>
    <%= fa('user') %> Users
    <small>
      <%= link_to(fa('plus') + ' New User', new_admin_user_path) %>
    </small>
  </h1>
</header>


<% if @users.present? %>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th><th>Username</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to(user.username, admin_user_path(user)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <p class="text-danger">Why for are there no more users no more?</p>

<% end %>


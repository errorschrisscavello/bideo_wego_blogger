<header class="page-header">
  <h1>
    <%= fa('file') %> Pages
    <small>
      <%= link_to(fa('plus') + ' New Page', new_page_path) %>
    </small>
  </h1>
</header>


<% if @pages.present? %>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th><th>Title</th>
      </tr>
    </thead>
    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= page.id %></td>
          <td><%= link_to(page.title, page_path(page)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <p class="text-danger">Why for are there no more pages no more?</p>

<% end %>


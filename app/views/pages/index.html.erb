<header class="page-header">
  <h1>
    <%= fa('page') %> Pages
    <small>
      <%= link_to(fa('plus') + ' New Page', new_page_path) %>
    </small>
  </h1>
</header>


<% if @pages.present? %>

  <ol>
    <% @pages.each do |page| %>
      <li>
        <%= link_to(page.title, page_path(page)) %>
      </li>
    <% end %>
  </ol>

<% else %>

  <p class="text-danger">Why for are there no more pages no more?</p>

<% end %>


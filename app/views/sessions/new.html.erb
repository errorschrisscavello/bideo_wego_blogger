<!-- Login -->
<%= form_tag(session_path) do %>

  <div class="form-group">
    <%= text_field_tag(
      :username_or_email,
      nil,
      :placeholder => 'Username or Email',
      :class => 'form-control'
    ) %>
  </div>

  <div class="form-group">
    <%= password_field_tag(
      :password,
      nil,
      :placeholder => 'Password',
      :class => 'form-control'
    ) %>
  </div>

  <%= submit_tag('Sign In', :class => 'btn btn-default') %>
<% end %>

